@model IEnumerable<ECommerce_Sat.DAL.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Categoría</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create nueva categoría</a>
</p>

<table class="table table-hover table-responsive table-striped" id="CategoryTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifieldDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var country in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => country.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => country.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => country.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => country.ModifieldDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@country.Id" class="btn btn-outline-warning">Editar</a> |
                    <a asp-action="Details" asp-route-id="@country.Id" class="btn btn-outline-info">Ver Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@country.Id" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   <script src="//cdn.datatables.net/1.13.3/js/jquery.dataTables.min.js"></script>

   <script type="text/javascript">
        $(document).ready(function () {
            $('#CategoryTable').DataTable({
            "language": {
                "url": "cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            }
            },
            "aLengthMenu": [
                [ 5, 25, 50, 100, 200, -1],
                [ 5, 25, 50, 100, 200, "Todos"]
                ]

            )};
       )};
    </script>

    }

